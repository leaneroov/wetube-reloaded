extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span= errorMessage
        form#uploadForm
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="Title", required, type="text", id="title", name="title", maxlength=80)
            input(placeholder="Description", required, type="text", id="description", name="description", minlength=20)
            input(placeholder="Hashtags, separated by comma.", required, type="text", id="hashtags", name="hashtags")
            input(type="submit", value="Upload Video")
            div#uploadStatus 
                span#statusMessage
                div#progressBar(style="width: 0%; height: 20px; background-color: #4CAF50; display: none;")

block scripts 
    script(src="/static/js/recorder.js")
    script(src="/static/js/directUpload.js")